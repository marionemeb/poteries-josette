{% extends 'base.html.twig' %}

{% block title %}Réinitialise ton mot de passe{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    {{ form_start(requestForm) }}
    <div class="limiter">
        <div class="container-login100" style="background-image: url(/img/olive-tree-962908_640.jpg);">
            <div class="wrap-login100">
                <div class="login100-form">
                    <span class="login100-form-title">
						<h4>Réinitialises ton mot de passe</h4>
					</span>
                    <div class="wrap-input100 validate-input" data-validate="Enter username">
                        {{ form_row(requestForm.email, {'attr':{'class': 'input100', 'placeholder': 'exemple@email.com'}}) }}
                        <div style="margin: 20px auto">
                            <small>
                                Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot
                                de passe.
                            </small>
                        </div>

                        <div class="container-login100-form-btn">
                            <button class="login100-form-btn" type="submit">Valider</button>
                        </div>
                        {{ form_end(requestForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
